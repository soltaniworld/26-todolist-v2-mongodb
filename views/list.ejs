<%- include("header") -%>

  <form class="form-new-list" action="/newlist" method="post">
    <div class="box container-new-list" id="heading">
      <h1> <input id="input-new-list" type="text" name="newList" placeholder="<%= listTitle %> " autocomplete="off">
        <button id="submit-new-list" type="submit" name="list">new list</button>
      </h1>
    </div>
  </form>

  <div class="box">
    <% items.forEach(item => { %>
      <div class="item">
        <input class="checkbox" type="checkbox" name="<%= item._id %>" <%= item.completed? "checked" : "" %>>
        <p contenteditable="true" class="task" id="<%= item._id %>"><%=  item.task  %></p>
        <span class="delete-item"></span>
      </div>
    <% }) %>

      <form class="item" action="/add/<%= listTitle %>" method="post">
        <input id="new-item-input" type="text" name="newItem" placeholder="New Item" autocomplete="off">
        <button type="submit" name="list" >+</button>
      </form>
  </div>

<%- include("footer") -%>
