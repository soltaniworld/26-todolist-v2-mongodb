<%- include("header") -%>



  <div class="box" id="heading">
    <h1 contenteditable="true" class="list-name"> <%= listTitle %></h1>
    <button id="btn-new-list">new list</button>
  </div>


  <div class="box">
    <% items.forEach(item => { %>
      <div class="item">
        <input class="checkbox" type="checkbox"  <%= item.completed? "checked" : "" %>>
        <p contenteditable="true" class="task"><%=  item.task  %></p>
        <input type="hidden" class="input-hidden" name="itemID" value="<%= item._id %>">
        <span class="delete-item"></span>
      </div>
    <% }) %>

      <form class="" action="/add/<%= listTitle %>" method="post">
        <input id="new-item-input" type="text" name="newItem" placeholder="New Item" autocomplete="off" required>
        <button type="submit" name="list" >+</button>
      </form>
  </div>

<%- include("footer") -%>
